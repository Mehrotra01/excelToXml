{
  "compilerOptions": {
    /* Core options */
    "target": "ES2020",               // Output modern JS matching Node 20+
    "module": "ESNext",               // ESM output
    "moduleResolution": "node",       // Match Node's resolution strategy
    "rootDir": "./src",               // Your source files live here
    "outDir": "./dist",               // Emit compiled JS here
    "esModuleInterop": true,          // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Type lookup */
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],

    /* Paths (if you want custom module resolution) */
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },

    /* Source maps (optional for debugging) */
    // "sourceMap": true,
    // "inlineSources": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp-clone"
  ]
}
