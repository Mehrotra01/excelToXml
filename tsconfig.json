{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp-clone",
    "dist"
  ]
}
